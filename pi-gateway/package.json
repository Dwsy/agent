    "@sinclair/typebox": "^0.34.0",
    "croner": "^10.0.1",
    "discord.js": "^14.16.0",
    "grammy": "^1.31.0"
  },
  "devDependencies": {
    "@mariozechner/pi-agent-core": "^0.52.7",

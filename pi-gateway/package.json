{
  "name": "pi-gateway",
  "version": "0.1.0",
  "type": "module",
  "description": "Local AI Gateway for pi agent â€” Telegram, Discord, WebChat, and more",
  "bin": {
    "pi-gw": "src/cli.ts"
  },
  "scripts": {
    "dev": "bun run --watch src/cli.ts gateway",
    "start": "bun run src/cli.ts gateway",
    "build": "bun scripts/embed-web.ts && bun build --compile src/cli.ts --outfile pi-gw",
    "check": "bun run tsc --noEmit",
    "admin:install": "bun install --cwd admin-console",
    "admin:dev": "bun run --cwd admin-console dev",
    "admin:build": "bun run --cwd admin-console build",
    "admin:preview": "bun run --cwd admin-console preview"
  },
